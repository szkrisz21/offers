<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.Offers" parent="Theme.AppCompat.DayNight.NoActionBar">
    </style>

    <style name="Theme.Offers" parent="Base.Theme.Offers" >
        <item name="toolbarStyle">@style/Toolbar</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/inter_400</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Base.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:elevation">4dp</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="titleCentered">true</item>
        <item name="titleTextAppearance">@style/Toolbar.TitleText</item>
    </style>

    <style name="Toolbar" parent="Base.Toolbar"/>
</resources>